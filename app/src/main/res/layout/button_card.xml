<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageCard1"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        android:tint="@color/bass_dark_apache"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_card" />

    <TextView
        android:id="@+id/button_card_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Kaart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/imageCard1"
        app:layout_constraintTop_toBottomOf="@+id/imageCard1" />

    <TextView
        android:id="@+id/button_card_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bekijk shuttle kaart"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/button_card_text1"
        app:layout_constraintTop_toBottomOf="@+id/button_card_text1" />

</androidx.constraintlayout.widget.ConstraintLayout>